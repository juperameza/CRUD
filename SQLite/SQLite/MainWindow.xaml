<Window x:Class="SQLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLite"
        mc:Ignorable="d"
         Title="Contactos" Height="160" Width="330">
    <Grid>
        <StackPanel Margin="10">
            <WrapPanel>
                <TextBlock Text="Nombre:"/>
                <TextBox x:Name="txtNombre" Width="230" Margin="5,0,0,5"/>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="Correo:"/>
                <TextBox x:Name="txtCorreo" Width="230" Margin="12,0,0,5"/>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="Telefono:"/>
                <TextBox x:Name="txtTelefono" Width="100" Margin="3,0,0,5"/>
            </WrapPanel>
            <Button Content="Guardar" x:Name="btnGuardar" Width="70" HorizontalAlignment="Right" Click="btnGuardar_Click"/>
        </StackPanel>
    </Grid>
</Window>